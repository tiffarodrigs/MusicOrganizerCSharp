@{
  Layout = "_Layout";
}
  @using MusicOrganizer.Models;
    <h1>Record List</h1>
    @if (Model.Count == 0)
    {
      <p>There are no records in the list.</p>
    }
    <ul>
      @foreach (Record record in Model)
      {
      <li><a href='/records/@record.Id'>@record.Title</a></li>
      }
    </ul>
    <a href="/records/new">Add a new record.</a>
    <form action="/records/delete" method="post">
  <button type="submit" name="button">Clear All Records</button>
</form>
